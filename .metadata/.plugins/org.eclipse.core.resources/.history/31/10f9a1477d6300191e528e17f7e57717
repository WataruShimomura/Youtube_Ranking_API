//				String dateTimeSet = dateTimedate + "T00:00:00Z";
//
//				DateTime dateTimeSetRtu = new DateTime(dateTimeSet);
//
//				return dateTimeSetRtu;
			} else {
//				SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
//				Date date = new Date();
//				Calendar time = Calendar.getInstance();
//				time.setTime(date);
//
//				time.add(Calendar.DAY_OF_MONTH, -1);
//
//				String strDate = sdf.format(date);
//
//				DateTime dateTimedate = new DateTime(strDate);
//
//				String dateTimeSet = dateTimedate + "00:00:00Z";
//
//				DateTime dateTimeSetRtu = new DateTime(dateTimeSet);
//
//				return dateTimeSetRtu;
			}

		}

	}

}
